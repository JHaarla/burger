{{!-- main container --}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8">
                    <h1>Eat-Da-Burger</h1>
                    <h5>Create a NEW burger!</h5>
                    <form id="createBurger">
                        <input type="email" class="form-control" id="createBurg" placeholder="Enter your burger here!">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
                <div class="col-md-4">
                    <img src="public/assets/img/burger.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        {{!-- list of burgers --}}
        <div class="col-md-6">
            <h3>Burgers</h3>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <p>
                    {{this.id}}. {{this.burger_name}}
                    <button data-id="{{this.id}}" class="btn btn-primary">Eat Burger!</button>
                </p>
                {{/unless}} {{/else}}
            </ul>

        </div>

        {{!-- list of devoured burgers --}}
        <div class="col-md-6">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <p>
                    {{this.id}}. {{this.burger_name}}
                </p>
                {{/if}} {{/each}}
            </ul>
        </div>

    </div>
 
</div>



